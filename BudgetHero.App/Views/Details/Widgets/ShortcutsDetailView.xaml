<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="BudgetHero.App.Views.Details.Widgets.ShortcutsDetailView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:lang="clr-namespace:BudgetHero.App.Resources.Languages"
    xmlns:universalViews="clr-namespace:BudgetHero.App.Views.Content.Universal"
    xmlns:widgets="clr-namespace:BudgetHero.App.ViewModels.Details.Widgets"
    Title="{Binding Title}"
    x:DataType="widgets:ShortcutsDetailViewModel"
    Shell.NavBarHasShadow="True"
    Shell.TabBarIsVisible="False">

    <ContentPage.ToolbarItems>

        <ToolbarItem
            Command="{Binding SaveCommand}"
            Order="Primary"
            Priority="0"
            Text="{x:Static lang:AppResource.General_ToolbarItem_Button_Save}" />
    </ContentPage.ToolbarItems>

    <Grid>
        <Grid Margin="{StaticResource LayoutMargin}" Padding="{StaticResource LayoutPadding}">
            <Label Text="{x:Static lang:AppResource.General_Views_NoItems}" />
        </Grid>
        <universalViews:ActivityIndicator IsBusy="{Binding IsBusy}" />
    </Grid>

</ContentPage>